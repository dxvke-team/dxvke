<!--pages/addressList/addressList.wxml-->
<view class='addressList'>
  <view>
    <view wx:for='{{addressList}}' class='list'>
      <view class='list_des'>
        <text class='name'>{{item.person_name}}</text>
        <text class='tell'>{{item.telephone}}</text>
        <view class='address'>{{item.province}}{{item.country}}{{item.district}}</view>
      </view>
      <view class='setting'>
        <label class="radio">
          <radio value="1" checked="{{checked}}" color='#ff425f' />设为默认</label>
        <text data-id='25' catchtap='delAddress'>删除</text>
        <text catchtap='toEdit'>编辑</text>
      </view>
    </view>
  </view>
  <view class='all_btn'>
    <button type="warn" bindtap="warn">添加地址</button>
  </view>
</view>
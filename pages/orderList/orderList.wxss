/* pages/orderList/orderList.wxss */
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: white;
  font-size: 14px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  border-bottom: 1rpx solid #e1e1e1;
}

.tab-item {
   display: inline-block; 
  color: #666;
  width: calc(100%/4);
  text-align: center

}

.tab-item.active {
  color: #ff425f;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 120rpx;
  background: #ff425f;
  position: absolute;
  bottom: 0;
  left: calc((100% - 120rpx)/2);
  border-radius: 16rpx;
}
.tab-content {
  margin-top: 80rpx;
  background: white;
}

.scoll-h {
  height: 100%;
}
.order-num{
  padding: 40rpx 50rpx;
  font-size: 32rpx;
  color: rgb(51, 51, 51);
  border-bottom: 16rpx solid rgb(244, 244, 244);
}
.order-num input{
  display: inline-block;
  border-bottom: 1rpx solid rgb(244, 244, 244);
  margin-bottom: -14rpx;
  margin-left: 40rpx;
}
.describe{
  padding: 20rpx 34rpx 0;
}
.describe image{
  width: 100%;
  height: 180rpx;
}
.tip{
  font-size: 22rpx;
    color: rgb(153, 153, 153);
    margin: 10rpx 0rpx 10rpx 15rpx;
    margin-left: 15rpx;
    display: block;
}
.des_title{
  padding: 2rpx 0 15rpx;
    font-size: 24rpx;
    color: rgb(51, 51, 51);
}
.how{
  border-bottom: 1rpx solid rgb(244, 244, 244);
  padding: 10rpx 0 20rpx;
}
.des_picture{
  width: 100%;
   margin-bottom:140rpx;
}
.empty{
  width: 100%;
  text-align: center;
  padding: 100rpx 0px;
}
.empty image{
  width: 152rpx;
  height: 140rpx;
}
.empty view{
  font-size: 28rpx;
  color: rgb(102, 102, 102);
}